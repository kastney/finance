<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance.Controls.Navigation.ToolbarItem">

    <!-- Contorno circular ao redor do ícone -->
    <Border HeightRequest="40" WidthRequest="40" StrokeThickness="0">
        <!-- Define o formato da borda como um círculo com raio 20 -->
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20" />
        </Border.StrokeShape>

        <!-- Gesto de toque que dispara o evento ao clicar -->
        <Border.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" NumberOfTapsRequired="1" />
        </Border.GestureRecognizers>

        <!-- Layout básico para o ícone do botão -->
        <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
            <!-- Ícone centralizado dentro da borda, padrão: menu -->
            <Label x:Name="icon" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="6" Text="&#xf0c9;" FontFamily="IconsSolid" FontSize="18" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}">
                <!-- Estados visuais para o Label (ex: cor quando desabilitado) -->
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
            </Label>
            <!-- Indicador visual de avisos -->
            <BoxView x:Name="bullet" Grid.Column="1" HeightRequest="10" WidthRequest="10" CornerRadius="10" Color="{AppThemeBinding Light={StaticResource Warning}, Dark={StaticResource WarningDark}}" BackgroundColor="Transparent" IsVisible="False" />
        </Grid>
    </Border>
</ContentView>