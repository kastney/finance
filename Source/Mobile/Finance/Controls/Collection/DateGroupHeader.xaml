<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance.Controls.DateGroupHeader">

    <VerticalStackLayout Margin="15,20" Spacing="5">
        <Label x:Name="value" FontAttributes="Bold" FontFamily="OpenSansRegular"  FontSize="15" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <BoxView Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" HeightRequest="2" />
    </VerticalStackLayout>
</ContentView>