<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="Finance.Cells.OperationGroupCell">

    <Grid Margin="15,0" RowDefinitions="*,Auto,Auto" HeightRequest="50" RowSpacing="5">
        <Label Grid.Row="1" Text="{Binding Title}" FontAttributes="Bold" FontFamily="OpenSansRegular" VerticalOptions="End" FontSize="15" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <BoxView Grid.Row="2" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" HeightRequest="2" />
    </Grid>
</ViewCell>