<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:bottomSheet="clr-namespace:Finance.BottomSheets"
             xmlns:controls_devexpress="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:pages="clr-namespace:Finance.Pages"
             xmlns:styles="clr-namespace:Finance.Resources.Styles"
             x:Class="Finance.Pages.MainPage"
             Shell.FlyoutBehavior="Disabled"
             Title="{Binding Wallet.Name}">

    <ContentPage.Resources>
        <styles:TabViewStyle />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="walletItem" Clicked="WalletItem_Clicked" />
    </ContentPage.ToolbarItems>

    <Grid>
        <controls_devexpress:TabView x:Name="tabView">
            <controls_devexpress:TabViewItem HeaderText="Dashboard" HeaderIcon="dashboard" />
            <pages:DangerZoneTabViewItem />
        </controls_devexpress:TabView>
        <bottomSheet:SelectWalletBottomSheet x:Name="selectWalletBottomSheet" />
    </Grid>
</ContentPage>