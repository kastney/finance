<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Finance.Controls"
             x:Class="Finance.Pages.MainPage"
             Shell.FlyoutBehavior="Disabled"
             Title="{Binding Wallet.Name}">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="walletItem" Command="{Binding SelectWalletCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Margin="15,0,15,50">
            <Border Style="{x:StaticResource Card}" HeightRequest="150" />
            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,*,*,*" RowSpacing="20" ColumnSpacing="20">
                <Label Text="Opções da Carteira" Grid.Row="0" Grid.ColumnSpan="3" />
                <controls:SmallButtonCard Grid.Row="1" Grid.Column="0" Text="Zona de Perigo" Glyph="&#xf071;" Command="{Binding DangerZoneCommand}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>