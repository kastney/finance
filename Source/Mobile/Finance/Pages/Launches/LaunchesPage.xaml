<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cells="clr-namespace:Finance.Controls.Cells"
             xmlns:controls="http://schemas.devexpress.com/maui"
             xmlns:models="clr-namespace:Finance.Models"
             xmlns:navigation="clr-namespace:Finance.Controls.Navigation"
             xmlns:viewModel="clr-namespace:Finance.Pages.Launches"
             x:Class="Finance.Pages.Launches.LaunchesPage"
             x:DataType="viewModel:LaunchesViewModel"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <!-- Estrutura principal com barra de navegação e conteúdo rolável -->
    <Grid RowDefinitions="Auto,*">
        <!-- Barra de navegação personalizada com botão de retorno -->
        <navigation:NavigationBar Title="Lançamentos" IsRoot="False" Clicked="BackButtom_Clicked" />

        <!-- ... -->
        <Border Grid.Row="1" IsVisible="{Binding IsEmpty}" Style="{x:StaticResource Card}" Margin="15,0" VerticalOptions="Start">
            <!-- ... -->
            <Label FontSize="Micro" Text="Tudo tranquilo por aqui. Nenhuma notificação no momento!" HorizontalTextAlignment="Start" Padding="15,20" />
        </Border>

        <!-- ... -->
        <controls:DXCollectionView Grid.Row="2" ItemsSource="{Binding Notifications}" AllowDragDropItems="False" SelectionMode="Single" IsScrollBarVisible="False">
            <!-- ... -->
            <controls:DXCollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- ... -->
                    <cells:NotificationCell x:DataType="models:Notification" Code="{Binding Id}" Key="{Binding Key}" Icon="{Binding Icon}" Title="{Binding Title}" Description="{Binding Description}" Tag="{Binding Tag}" Level="{Binding Level}" />
                </DataTemplate>
            </controls:DXCollectionView.ItemTemplate>
        </controls:DXCollectionView>
    </Grid>
</ContentPage>