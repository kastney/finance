<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:Finance.Pages"
       x:Class="Finance.Pages.AppShell">

    <!-- Page Registration -->
    <ShellContent FlyoutItemIsVisible="False" Route="loading" ContentTemplate="{DataTemplate pages:LoadingPage}" />
    <ShellContent FlyoutItemIsVisible="False" Route="presentation" ContentTemplate="{DataTemplate pages:WalletPresentationPage}" />
    <ShellContent FlyoutItemIsVisible="False" Route="dashboard" ContentTemplate="{DataTemplate pages:DashboardPage}" />
</Shell>