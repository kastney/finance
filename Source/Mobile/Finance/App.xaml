<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Finance"
             x:Class="Finance.App">

    <!-- Define os recursos globais do aplicativo, que podem ser usados em qualquer lugar do projeto. -->
    <Application.Resources>
        <!-- Define um dicionário de recursos para agrupar estilos, cores, templates, etc. -->
        <ResourceDictionary>
            <!-- Permite importar outros dicionários de recursos, facilitando a modularização dos estilos e temas. -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Importa as definições de cores personalizadas do arquivo Colors.xaml. -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <!-- Importa os estilos gerais da aplicação definidos em Styles.xaml. -->
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>